{
    "manifest_version": 3,
    "name": "Wikipedia Wrapped",
    "version": "0.2",

    "description": "Records all of the wikipedia articles visited",

    "icons": {
      "48": "Wikipedia-logo-v2_48.png",
      "200": "Wikipedia-logo-v2.png"
    },

    "action": {
      "default_icon": {
        "48": "Wikipedia-logo-v2_48.png",
        "200": "Wikipedia-logo-v2.png"
      },
      "default_title": "Wikipedia Wrapped"
    },


    "background": {
        "scripts": [ "background.js" ]
    },
    "permissions": [ "tabs", "webNavigation", "storage", "unlimitedStorage", "downloads", "sessions" ],
    "browser_specific_settings": {
      "gecko": {
        "id": "wikipedia_wrapped@soon.it",
        "strict_min_version": "109.0",
        "update_url": "https://recipe.soon.it/updates.json"
      },
      "gecko_android": {
        "strict_min_version": "113.0",
        "update_url": "https://recipe.soon.it/updates-m.json"
      }
    }
  }
